{% extends 'base.html.twig' %}

{% block title %}Mon Profil — Édition
{% endblock %}

{% block body %}
	<div class="bg-gray-100 py-10">
		<div class="max-w-md mx-auto bg-white p-8 rounded-xl shadow-lg">
			<h2 class="text-3xl font-semibold text-center text-gray-800 mb-6">Modifier mon profil</h2>

			{{ form_start(form, { attr: { class: 'space-y-5' } }) }}

			<div>
				{{ form_label(form.username, null, { label_attr: { class: 'block text-gray-700 font-medium mb-1' } }) }}
				{{ form_widget(form.username, { attr: { class: 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-400' } }) }}
				{{ form_errors(form.username) }}
			</div>

			<div>
				{{ form_label(form.email, null, { label_attr: { class: 'block text-gray-700 font-medium mb-1' } }) }}
				{{ form_widget(form.email, { attr: { class: 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-400' } }) }}
				{{ form_errors(form.email) }}
			</div>

			<div>
				{{ form_label(form.plainPassword, 'Nouveau mot de passe', { label_attr: { class: 'block text-gray-700 font-medium mb-1' } }) }}
				{{ form_widget(form.plainPassword, { attr: { class: 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-400' } }) }}
				{{ form_help(form.plainPassword) }}
				{{ form_errors(form.plainPassword) }}
			</div>

			<div class="pt-4">
				<button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 rounded transition">
					Enregistrer les modifications
				</button>
			</div>

			{{ form_end(form) }}

			<div class="mt-6 text-center">
				<a href="{{ path('profile') }}" class="text-gray-600 hover:underline text-sm">← Retour à mon profil</a>
			</div>
		</div>
	</div>
{% endblock %}

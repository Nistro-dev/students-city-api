{% extends 'base.html.twig' %}

{% block title %}Donner un avis —
	{{ place.name }}
{% endblock %}

{% block body %}
	<div class="bg-gray-100 py-10">
		<div class="max-w-2xl mx-auto bg-white p-8 rounded-xl shadow-lg">
			<h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Votre avis sur «
				{{ place.name }}
				»</h2>

			{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

			<div>
				{{ form_label(form.rating, 'Note', {'label_attr': {'class': 'block text-gray-700 mb-2'}}) }}
				{{ form_widget(form.rating, {'attr': {'class': 'w-full border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
				{{ form_errors(form.rating) }}
			</div>

			<div>
				{{ form_label(form.comment, 'Commentaire', {'label_attr': {'class': 'block text-gray-700 mb-2'}}) }}
				{{ form_widget(form.comment, {'attr': {'class': 'w-full border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
				{{ form_errors(form.comment) }}
			</div>

			<button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition duration-200">
				Soumettre l’avis
			</button>

			{{ form_end(form) }}

			<div class="mt-6 text-center">
				<a href="{{ path('front_place_show', { id: place.id }) }}" class="text-blue-600 hover:underline text-sm">← Retour à la fiche</a>
			</div>
		</div>
	</div>
{% endblock %}
